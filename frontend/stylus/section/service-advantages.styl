.section
  &--service-advantages
    background-color #ffffff
    
.service-advantages
  &__list
    margin-top 0
    
    +md-min()
      display flex
      justify-content space-between
      flex-wrap wrap
    
  &__title 
    font-size 18px
    font-weight 700
    line-height 36px
    margin-bottom 10px
    padding-right 60px
    
  &__item
    display block
    position relative
    margin-bottom 40px
    color #444444 
    
    +md-min()
      width calc(50% - 15px)
      min-width calc(50% - 15px)
    
    &:last-child
      margin-bottom 0
    p
      font-size 16px
      font-weight 300
      line-height 28px
      strong
        font-weight 700
     
    &:last-child
      img
        object-fit contain
    
    &:not(:last-child)
      background-color #fafafa
      padding 40px 20px
      &:before
        color #3abdc9
        font-size 100px
        font-weight 700
        position absolute
        top 15px
        right 20px
    
    &:nth-child(1)
      &:before
        content '1'
    
    &:nth-child(2)
      &:before
        content '2'
    
    &:nth-child(3)
      &:before
        content '3'


.service-advantages-form
  &__fields 
    display flex
    justify-content space-between
    margin-bottom 25px
    
  &__button
    width 100%
    margin-bottom 25px