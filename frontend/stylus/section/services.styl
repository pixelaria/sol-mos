.services
  &__item
    position relative
    display block
    background-color #fafafa
    color #444444
    font-size 24px
    font-weight 700
    padding 45px
    margin-bottom 20px
    
    &:after 
      content ''
      display block
      position absolute
      right 0
      
      border 20px solid transparent
      border-right 20px solid #3ec5d1
      border-bottom 20px solid #3ec5d1

    &:before
      content ''
      display block
      width 50px
      height 50px
      position absolute
      left -10px
      top -10px
      background-size contain
      background-position center
    
    &--drive
      &:before
        background-image url('../images/icon-drive.png')
    &--repair
      &:before
        background-image url('../images/icon-repair.png')
    &--craft
      &:before
        background-image url('../images/icon-craft.png')
    &--other
      &:before
        background-image url('../images/icon-other.png')
    span
      color #3abdc9
      

.blockquote
  border-left 3px solid #3ec5d1
  colors #444444
