.section
  padding-top 40px
  padding-bottom 40px
  
  &--areas-work
   font-size 13px
   background-color #fafafa


   
.areas-work
  &__list
    position relative
    z-index 1
    
    +md-min()
      display flex
      justify-content center
      
  &__item
    display block
    
    +md-min()
      width 25%
      min-width 25%
  
  
.areas-work-item
  margin 0 15px
  &__img
    position relative
    overflow hidden
    transform skewX(-30deg)  perspective(1px)
    margin-bottom 22px

    img 
      transform skewX(30deg) scale(1.5)  perspective(1px)
    
  &:hover
    .areas-work-item__overlay
      opacity 1
    
  
  &__title
    color: #444444;
    font-size: 24px;
    font-weight: 700;
    text-align center
    text-transform uppercase
    margin-right 30%
  
  &__overlay
    display flex
    align-items center
    justify-content center
    
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-color: rgba(58, 189, 201, 0.8);
    color #ffffff
    text-align center
    z-index 1
    opacity 0
    transition opacity 0.3s ease-in-out 
    
    span 
      display block
      font-size 16px
      transform skewX(30deg) perspective(1px)

.button
  &--areas-work
    display none