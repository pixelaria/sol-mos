.section
  &--page 
    padding-bottom 15px
    
.categories
  &__list 
    display block
    +md-min()
      display flex
  &__item
    width 100%
    display flex
    justify-content flex-start
    align-items center
    margin-bottom 10px
    color #444444
    
    +md-min()
      display block
      margin-right 20px
      
      &:last-child
        margin-right 0

  
  &__img
    display block
    position relative
    width 64px
    min-width 64px
    margin-right 18px
    +md-min()
      margin-right 0
      margin-bottom 20px
      width 100%
    img 
      width 100%
      height auto
  &__title
    font-size 16px
    font-weight 400
    line-height 28px
    +md-min()
      text-align center
  
.sidebar
  display none
  +md-min()
    display block
    width 30%
    min-width 30%
    margin-right 40px

.toolbar
  display block
  +md-min()
    display flex
    justify-content space-between
    margin-bottom 35px
  &__search
    display block
    +md-min()
      width 30%
      min-width 30%
      margin-right 40px
    
    
  &__sort
    background-color #fafafa
    +md-min()
      width 100%
    
.side-search
  &__input 
    width 100%
    height 50px
    line-height 50px
    background-image linear-gradient(to right, #3fc6d2 0%, #3aabc9 100%)
    padding 15px
    color #ffffff

.sort
  +md-min()
    display flex
    justify-content flex-end
    align-items center
  
  &__title
    display none
    
    +md-min()
      display block
      color #444444
      font-family "Circe - Regular"
      font-size 16px
      font-weight 400
  
  &__items
    display flex
    justify-content flex-start
    align-items center
    height 50px
    padding 15px
    
    +md-min()
      justify-content flex-end
  
  &__item
    display flex
    flex-direction row
    align-items center
    justify-content flex-start
    flex-wrap nowrap
    
    color #999999
    margin-right 15px
    cursor pointer
    
    &:last-child 
      margin-right 0

    &:after
      content ''
      display: block;
      width: 10px;
      height: 10px;
      margin-left: 5px;
      background-image url('../images/icon-sort.png')
      background-position center
      background-repeat no-repeat
      background-size cover

    &--active
      color #3abdc9
      &:after
        background-image url('../images/icon-sort-active.png')
      
    &--asc:after
      transform rotateX(180deg)
    
.listing
  display block
  margin 0 -15px 
  +md-min()
    margin 0
  
  &__products
    display block
  
.products
  +md-min()
    display flex
    justify-content space-between
    flex-wrap wrap
    
  &__item
    display flex
    justify-content flex-start
    align-items center
    margin-bottom 10px
    background-color #ffffff
    
    +md-min()
      width 32%
      display block
      margin-bottom 30px

.products-item
  cursor pointer
  
  transition box-shadow 0.3s ease-in-out
  +md-min()
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  &:hover
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
  &__image
    width 120px
    min-width 120px
    +md-min()
      width 100%
    
  &__desc
    padding 15px
    +md-min()
      padding 20px
      
  &__title
    color #444444
    font-size 12px
    font-weight 700
    line-height 16px
    text-transform uppercase
    margin-bottom 4px
    
    +md-min()
      font-size 14px
      line-height 22px
      
  &__params
    color #444444
    font-size 10px
    font-weight 400
    line-height 12px
    
    +md-min()
      font-size 14px
      font-weight 400
      line-height 22px
      
.sidemenu
  +md-min()
    margin-bottom 20px 
  &__list
    display block
  &__item
    display block
    border-top 1px solid rgba(153,153,153,0.2)
    

    
  &__link
    display flex
    justify-content flex-start
    align-items center
    
    color #444444
    font-size 16px
    font-weight 400
    line-height 24px
    padding 22px 0
    text-transform uppercase
    cursor pointer
    
  
    &:before 
      content ''
      width 24px
      height 24px
      margin-right 15px
      display block
      background-size contain
      background-position center
      background-repeat no-repeat
      
    &--1
      &:before
        background-image url('../images/cat-1.png')
    &--2
      &:before
        background-image url('../images/cat-2.png')
    &--3
      &:before
        background-image url('../images/cat-3.png')
    &--4
      &:before
        background-image url('../images/cat-4.png')
    &--5
      &:before
        background-image url('../images/cat-5.png')
  &__submenu
    padding-left 30px
    margin-bottom 15px
  &__submenu-item
    margin-bottom 10px
  &__submenu-link
    color #444444
    font-size 16px
    font-weight 400
    line-height 28px
    padding 15px 0
        
    &--active
      font-weight 700
    
.sale
  background-color #fafafa

  &__image
    display block
  
  &__title
    color #3abdc9
    font-size 18px
    font-weight 700
    margin-bottom 10px
  &__desc
    padding 30px 20px
    
  &__text
    color #444444
    font-size 16px
    font-weight 400
    line-height 24px
    

.partners
  &__list
    +md-min()
      display flex
      justify-content space-between
      align-items center

  &__item
    display flex
    justify-content flex-start
    align-items center
    margin-bottom 15px

    +md-min()
      flex-basis calc(25% - 20px)

  &__img
    display block
    width 70px
    min-width 70px
    margin-right 20px
  &__title
    color #444444
    font-size 14px
    font-weight 400
    line-height 22px