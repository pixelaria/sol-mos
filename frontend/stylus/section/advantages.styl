.section
  &--advantages
    padding-top 30px
    padding-bottom 60px
    z-index 2
    
    +lg-min()
      position relative
      background-color #ffffff
    
    .container
      z-index 2
      background-color #fafafa
      position relative

.section--advantages
  background-color #fafafa
  margin-top 0
  position relative
  
  +md-min()
    margin-top 75px
  
    
  .container
    z-index 1
  &:before,&:after
    content ""
    position absolute
    left 0
    width 100%
    height 100px
    top 0px
    background-color #fafafa
    z-index 0s
    
  &:before
    -ms-transform: skewY(-5deg);
    transform: skewY(-5deg);
  
  &:after
    -ms-transform: skewY(5deg);
    transform: skewY(5deg);
  
  &:before
    -ms-transform: skewY(-11deg);
    transform: skewY(-11deg);
    +lg-min()
      right -40%
      top -75px
      height 150px
      -ms-transform: skewY(-4deg);
      transform: skewY(-4deg);
  &:after
    -ms-transform: skewY(11deg);
    transform: skewY(11deg);
    +lg-min()
      left -40%
      top -75px
      height 150px

.section--nomt
  margin-top 0

.advantages
  &__list
    margin 0
    padding 0
    
    +md-min()
      display flex
      justify-content space-between
    
  &__item
    display block
    max-width 300px
    margin auto
    
    +md-min()
      margin 15px 0
      max-width none
  
.advantage
  text-align center
  margin-bottom 25px
  padding-top 30px
  padding-bottom 30px
  position relative
  background-color #fafafa

  &:last-child
    margin-bottom 0
    
  +md-min()
    padding-right 30px
    padding-left 30px
    
    &:after 
      content ''
      width 1px
      height 100%
      position absolute
      right 0
      top 0
      bottom 0
      margin auto
      background-color #dbdbdb
    &:last-child 
      &:after
        content none
  &__title
    color #3abdc9
    font-family "Circe"
    font-size 24px
    font-weight 400
    letter-spacing -0.1px
    margin-bottom 10px
  
  &__text
    color #444444
    font-family "Circe"
    
    font-size 16px
    font-weight 400
    line-height 28px
    b
      font-weight 700

  &:before
    content ''
    position absolute
    left 0
    right 0
    top 0
    margin auto
    opacity 0.1
    z-index 0
    width 150px
    height 150px
    background-size cover
  
  &:nth-child(1)
    &:before
      background-image url('../images/advantage-1.jpg')
      
  &:nth-child(2)
    &:before
      background-image url('../images/advantage-2.jpg')
      
  &:nth-child(3)
    &:before
      background-image url('../images/advantage-3.jpg')
      

  
 