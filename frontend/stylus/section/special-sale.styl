.section--special-sale
  display none
  padding-top 100px
  padding-bottom 140px

.special-sale
  margin-right 50px
  &__info
    background-color #fafafa
    padding 40px 50px
    padding-right 150px
    max-width 700px
    max-height 360px
    width 100%
    .over-heading
      color #999999
      font-size 16px
    h3
      color #444444
      font-size 24px
      font-weight 700
      line-height 36px
      text-transform uppercase
      margin-top 13px
      span
        color #3abdc9
    .button
      color #ffffff
      font-size 16px
      height 50px
      background-color #3abdc9
      padding 0 30px
      margin-top 45px
  &__list
    margin-top 15px
    &:not(:last-child)
      border-right 1px solid #d9d9d9
      padding-right 12px
      margin-right 12px
    p
      color #444444
      font-size 16px
      font-weight 300
      line-height 32px
  &__img
    max-width 440px
    margin-top 40px
    margin-left -85px
    width 100%
    max-height 360px



.wrd-slider
  overflow hidden
  position relative
  padding-left 25px
  padding-right 25px
  &__wrap
    width max-content
    transition .33s
  &__control
    position absolute
    top 5px
    bottom 0
    left 5px
    right 5px
    height max-content
    margin auto
    z-index 2
    &_button
      width 50px
      height 50px
      box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
      border-radius 25px
      background-color #ffffff
      background-image url('../images/left-arrow.png')
      background-position center
      background-repeat no-repeat
      &.button--next
        transform rotate(180deg)
