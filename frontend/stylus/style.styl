.projects
  &__item 
    margin-bottom 30px

  +lg-min()
    display flex
    justify-content space-between
    flex-direction row
    flex-wrap wrap

.project
  position relative
  background-color #3abdc9
  color #ffffff
  flex-basis 32%
	
  +lg-min()
    &__inner
      position absolute
      display block
      left: 0
      top: 0
      width: 100%
      height:100%

  &--text
    .project__inner
      padding: 15px

  +lg-min()
    &:after
      content ""
      display block
      padding-bottom 100%

  &--big
    &:after
      content: none;

  &__desc
    height 100%
    border 1px solid #ffffff
    padding 25px 15px 15px 15px

  &__title
    font-weight 700

  &__title, &__text
    margin-bottom 15px


  &__text:last-child
    margin-bottom 0
