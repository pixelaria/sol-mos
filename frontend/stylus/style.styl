    font-weight: 700;
    line-height: 24px;
    text-transform uppercase
    margin-bottom: 30px;

  &__list
    margin-bottom: 0;
.section-list
  list-style none
  margin-bottom: 30px;
  
  &__item
    display: flex;
    flex-direction: row
    align-items center
    
