.section--footer
  padding-top 55px
  padding-bottom 35px

.footer
  background-color #222222
  color:#ffffff
  font-size 14px
  
  &__parts
    display block
    
    +lg-min()
      display flex
      justify-content space-between
      flex-wrap nowrap
      
  &__part
    display block
    margin-bottom 16px
    
    &--menu
      +lg-min()
        display flex
        justify-content space-between
        flex-wrap nowrap
   
    
.footer-list
  +lg-min()
    &:not(:last-child)
      margin-right 50px
    
  &__item
    text-align center
    margin-bottom 8px
    +lg-min()
      text-align left
      
    a
      color #ffffff
      font-size 14px
      line-height 22px
      transition color 0.3s ease-in-out
      &:hover
        color #3abdc9    

.contacts
  text-align center
  &__phone 
    color #3abdc9
    font-size 18px
  &__address
    font-size 14px
    line-height 22px
  &__email
    color #ffffff
    
.copyright
  text-align center
  +lg-min()
    display flex
    justify-content space-between
  &__text
    color #787878
    margin-bottom 8px
    +lg-min()
      margin-bottom 0
      
  &__develop
    color #787878
    a
      color #3abdc9
      font-weight 700
    
        
