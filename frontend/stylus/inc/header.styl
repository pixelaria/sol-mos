.header
  &__top 
    display none
    +lg-min()
      display block
      height 40px
      background-image linear-gradient(to right, #3fc6d2 0%, #3aabc9 100%)  
      color #ffffff
      .container
        display flex
        justify-content space-between
        align-items center
  
  &__main
    background-image linear-gradient(to right, #3fc6d2 0%, #3aabc9 100%)
    height 60px
    padding 15px 0
  
    +lg-min()
      height 100px
      padding 30px 0

      background-color #fafafa
      background-image none
      
  &__container
    display flex
    align-items center
    justify-content space-between
    +lg-min()
      justify-content flex-start
      
  &__phone
    color #ffffff
    font-size 16px
    font-weight 400
    
    +lg-min()
      color #444444
      span 
        color #31aeb9
    
  &__part
    &--phone
      margin-right 10px
      +lg-min()
        order 3
        margin-right 0  
        margin-left auto
    &--logo
      display flex
      justify-content center
      align-items center
      +lg-min()
        margin-right 30px
    
    &--info
      display flex

.header-info
  font-size 14px
  &__part
    margin-right 25px
    &:last-child
      margin-right 0
            
.navbar-toggler 
  border none
  width 40px
  height 30px
  cursor pointer
  background 0 0
  margin-top 0
  
  display flex
  flex-direction column
  align-items center
  justify-content space-between

  +lg-min()
    display none

  &__bar
    background #fff
    display block
    width 100%
    height 3px
    border-radius 2px

.logo
  width 80px
  +lg-min()
    width 120px

.nav
  &__list
    padding: 5px 30px;
    margin: 0;
    list-style: none;
    
    position: absolute;
    top: 60px;
    left: 0;
    
    transition: all 0.3s ease-in-out;
    opacity: 0;
    visibility: hidden;
    text-align: center; 
    
    z-index: 3;
    background-color: #ffffff;

    width: 100%;

    +lg-min()
      background-color transparent
    
    &--active 
      opacity: 1;
      visibility: visible;
      transition: all 0.3s ease-in-out;
    
    +lg-min()
      display: flex;
      position: relative;
      top: 0;
      visibility: visible;
      opacity: 1;
      box-shadow:none;
      
  &__sublist
    display none
    +lg-min()
      display block
      visibility hidden
      min-width 100%
      position absolute
      top 75px
      left 0
      padding 0
      visibility hidden
      z-index 999
      background-color rgba(255,255,255,.95)
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
      padding 5px 20px
      opacity 0
      transition all .5s ease
    .nav__item
      margin-right 0
      text-align left
      white-space nowrap
  &__item
    position relative
    margin-right 30px
    cursor pointer
    
    &--parent
      display flex
      justify-conten space-between
      align-items center
      +lg-min()
        &:after
          content ''
          background-image url('../images/arrow-down.png')
          background-repeat no-repeat
          background-position center
          width 12px
          height 12px
          display block
          margin-left 12px
        
      &:hover 
        .nav__sublist
          
          opacity 1
          top 45px
          visibility visible
  &__link
    display block
    color #444444
    transition color 0.3s ease-in-out
    padding 15px 0
    &:hover
      color #3abdc9
      
  
.search
  display flex
  justify-content space-between
  align-items center
  
  &:before 
    content ''
    width 16px
    height 16px
    display block
    background-image ulr('../images/magnifying-glass.png')
    background-position center
    background-repeat no-repeat
    
  &__input
    background-color transparent
    border none
    color #ffffff
    font-size 14px
    &::placeholder
      color #ffffff
  
.header-test
  display none
  
  &__top
    background-image linear-gradient(to right, #3fc6d2 0%, #3aabc9 100%)
    max-height 40px
    &_left-side
      padding-top 11px
      padding-bottom 12px
      p,a
        margin-right 25px
        color #ffffff
        font-size 14px
    &_search
      input
        background 0
        color #ffffff
        font-size 14px
        padding-top 3px
        &::placeholder
          color #ffffff
    &_right-side
      .button
        display flex
        align-items center
        color #ffffff
        font-family "Circe"
        font-size 14px
        font-weight 400
        background-color rgba(0, 0, 0, 0.1)
        height 100%
        padding 0 30px
        transition background-color 0.3s ease-in-out
        &:hover
          background-color rgba(0, 0, 0, 0.2)
  &__main
    padding-top 30px
    padding-bottom 30px
    background-color #ffffff
    &_logotype
      margin-right 30px
    
    &_menu-item
      margin-right 25px
      a
        color #444444
        font-family "Circe"
        font-size 16px
        font-weight 400
      &--parent
        a
          margin-right 16px
        &:after
          content ''
          background-image url('../images/arrow-down.png')
          background-repeat no-repeat
          background-position center
          width 12px
          height 12px
          display block
    &_tel
      color #444444
      font-family "Circe"
      font-size 16px
      font-weight 400
      span
        color #31aeb9
