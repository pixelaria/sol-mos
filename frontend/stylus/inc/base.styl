.section
  padding-top 40px
  padding-bottom 40px
  
  &--initial
    +lg-min()
      padding-top 180px !important
      padding-bottom 235px !important
  
  &__title 
    margin-bottom 40px
  
.img
  display block
  &--responsive
    width 100%
    height auto

.input
  display flex
  align-items center
  width auto
  min-width 120px
  height 50px  
  border 1px solid #3abdc9
  background-color #fafafa
  padding 0 20px
  margin-right 10px
  
  &:last-child
    margin-right 0
  
.button
  display flex
  align-items center
  text-align center
  justify-content center
  
  color #ffffff
  font-size 16px
  height 50px
  padding 0 20px
  
  transition background-color 0.3s ease-in-out
  
  &--popup
    height 40px
    background-color: rgba(0, 0, 0, 0.1);
    padding 0 30px
    text-transform uppercase
    &:hover
      background-color rgba(0, 0, 0, 0.3)
    
  &--green
    border 1px solid #3abdc9
    background-color #3abdc9
    
    &:hover
      background-color rgba(255, 255, 255, 0.2)
  &--white
    border 1px solid #ffffff
    background-color transparent
    
    &:hover
      background-color rgba(255, 255, 255, 0.3)

.link
  color #444444
  transition color 0.3s ease-in-out
  
  &:hover 
    color #31aeb9
  &--white
    color #ffffff
    

.breadcrumbs 
  padding 0
  margin-bottom 15px
  margin-top 0

  +md-min()
    padding-top 20px

  &__item 
    position relative
    display inline-block
    font-size 10px
    font-weight 400
    margin-right 5px
    padding-right 20px
    color #999999
    +md-min()
      font-size 14px
    
    &:after 
      content '/'
      display inline-block
      width 10px
      text-align center
      position absolute
      right 0px
    &:last-child 
      margin-right 0
      padding-right 0
      &:after 
        content none
  
  &__link 
    color #999999
    text-decoration underline
    +md-min()
      font-size 14px

.page-start
  &__title
    color: #444444
    font-family: "Circe Bold - Bold"
    font-size 32px
    font-weight 700
    line-height 40px
    text-transform uppercase
    span 
      color #3abdc9
      
.content
  display block
  +md-min()
    display flex
    


.index
  background-color #3aacc9
  padding 50px
  
  &__list
    padding 50px
    background-color #ffffff
  
  &__link
    color #444444
    transition color 0.3s ease-in-out
    font-size 16px
    &:hover 
      color #3aacc9
  
  &__item
    margin-bottom 15px